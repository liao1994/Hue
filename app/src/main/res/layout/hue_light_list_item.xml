<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8sp"
        >

        <TextView
            style="@style/Hue.LightName"
            android:id="@+id/hue_light_name_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/hue_edit_light_setting_ibtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_settings_applications_black_24dp"
            android:contentDescription="@string/light_settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar

            android:id="@+id/hue_light_str_seekBar"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8sp"
     />

    </LinearLayout>

</LinearLayout>